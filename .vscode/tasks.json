{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",    
    "tasks": [
        {
            "label": "Build TypeScript",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Run Webpack",
            "dependsOn":[
                "Clean",
                "Build TypeScript"
            ],
            "type": "shell",
            "command":[
                "npx webpack"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },        
        {
            "label": "Clean",
            "type": "shell",
            "command":[
                "rm ./ide/js -Recurse -ErrorAction Ignore"
            ]
        },  
        {
            "type": "npm",
            "script": "test",
            "group": "test",
            "problemMatcher": []
        }
    ]
}